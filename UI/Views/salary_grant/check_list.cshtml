<script type="text/javascript">
    //总页数
    var currentPage = 1;
    var pages = 1;
    //当前页
    var zdy = 1;
    var vr = new Vue({
            el: "#ji",
            data: {
                dt: null,
                message: null,
                zys: null,
                dqy:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/salary_grant/dacx1?id=" + zdy,
                        type: "post",
                        data: "",
                        success: function (msg) {
                            console.info(msg)
                            var dd = eval("(" + msg + ")");
                            console.info(dd);
                            t.dt = dd.li;
                            t.message = dd.MyProperty;
                            currentPage = dd.zys;

                        }
                    });
                }
            },
                tj: function () {
                    window.location.href = "config_major_kindxg";
                },
                sy: function () {
                    zdy = 1;
                    this.load();
                },
                wy: function () {
                    zdy = currentPage;
                    this.load();
                },
                syy: function () {
                    if (zdy > 1) {
                        zdy--;
                    } else {
                        zdy = 1;
                    }
                    this.load();
                },
                xyy: function () {
                    if (zdy < currentPage) {
                        zdy++;
                    } else {
                        zdy = currentPage;
                    }
                    this.load();
                }
            ,
            created: function () {
                this.load();
            }
        })
</script>
                       
