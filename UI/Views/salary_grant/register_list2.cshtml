
@{
    ViewBag.Title = "register_list2";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script type="text/javascript"
            src="../../javascript/jquery-1.7.2.js">
    </script>
    <link rel="stylesheet" href="../../css/table.css" type="text/css" />
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <title>无标题文档</title>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/Content/jquery.unobtrusive-ajax.js"></script>
    <script src="~/javascript/vue.js"></script>
    <STYLE type="text/css">
        td {
            text-align: center;
        }
    </STYLE>
</head>

<body>
    <div id="ji">
        <table width="100%">
            <tr>
                <td colspan="2" style="text-align: left">
                    <font color="black">
                        您正在做的业务是：人力资源--薪酬标准管理--薪酬发放登记(负责人控制)
                    </font>

                </td>
            </tr>

        </table>
        <br>
        薪酬总数:<span id="qianggg"></span>
        总人数:<span id="zrs"></span>，基本薪酬总数:<span id="qianggg1"></span>，实发总额:<span id="qianggg2"></span>
              
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="ka">
            <tr>
                <td width="10%" class="TD_STYLE1">
                    <span>序号</span>
                </td>


                <td width="40%" class="TD_STYLE1">
                    <span>I级机构名称</span>
                </td>
                <td width="10%" class="TD_STYLE1">
                    <span>II级机构名称</span>
                </td>
                <td width="10%" class="TD_STYLE1">
                    <span>人数</span>
                </td>
                <td width="10%" class="TD_STYLE1">
                    基本薪酬总额(元)
                </td>
                <td width="10%" class="TD_STYLE1">
                    登记
                </td>
            </tr>

        </table>
        <p>

            &nbsp;
        </p>
    </div>
</body>
</html>
<script type="text/javascript">

    $(function () {
        $.ajax({
            url: "/salary_grant/Yiji",
            type: "post",
            data: "",
            success: function (msg) {
                console.info(msg)
                var dd = eval("(" + msg + ")");
                //list salary_grantANDsalary_grant_details
                console.info(dd);
                //一个 salary_grantANDsalary_grant_details
                var zrs = 0;
                var xcze = 0;
                for (var i = 0; i < dd.length; i++) {

                    //salary_grant
                    var ji = dd[i].salary_grant;
                    var id = dd[i].id;
                    zrs = zrs + ji.human_amount;
                    xcze = xcze + ji.salary_standard_sum;
                    var tr = $("<tr class='TD_STYLE2'></tr>");
                    var td = $("<td>" + (i + 1) + "</td>");
                    var td1 = $("<td>" + ji.first_kind_name + "</td>");
                    var td5 = $("<td>" + ji.second_kind_name + "</td>");
                    var td2 = $("<td>" + ji.human_amount + "</td>");

                    var td3 = $("<td>" + ji.salary_standard_sum + "</td>");
                   
                    var td4 = $("<td><a href='/salary_grant/register_commit/" + id + "'>登记</a></td>");
                    tr.append(td, td1,td5, td2, td3, td4);
                    $("#ka").append(tr);
                }
                $("#qianggg").text(xcze);
                $("#qianggg1").text(xcze);
                $("#qianggg2").text(xcze);
                $("#zrs").text(zrs);
            }
        });

    })
</script>

