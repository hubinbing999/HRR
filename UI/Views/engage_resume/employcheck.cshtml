            qd: function () {
                var an = $('input[name="er.id"]:checked').val();
                if (an == "通过") {
                    $.ajax({
                        url: "/engage_resume/employcheck",
                        type: "post",
                        data: $("#form").serialize() + "&pd=1",
                        success: function (msg) {
                            if (msg > 0) {
                                alert("审批成功");
                                window.location.href = "/engage_resume/employchecklist";
                            } else {
                                alert("审批失败");
                                window.location.href = "/engage_resume/employchecklist";
                            }
                        }
                    })
                }
                if (an == "不通过") {
                    $.ajax({
                        url: "/engage_resume/employcheck",
                        type: "post",
                        data: $("#form").serialize() + "&pd=2",
                        success: function (msg) {
                            if (msg > 0) {
                                alert("审批成功");
                                window.location.href = "/engage_resume/employchecklist";
                            } else {
                                alert("审批失败");
                                window.location.href = "/engage_resume/employchecklist";
                            }
                        }
                    })
                }
            }
        }, created: function () {
            this.load();
        }
    })



		function tick() {
			var now = new Date();
			var hours, minutes, seconds, noon;
			var intHours, intMinutes, intSeconds;
			intHours = now.getHours();
			intMinutes = now.getMinutes();
			intSeconds = now.getSeconds();
			if (intHours < 24) {
				hours = intHours+":";
				noon = "A.M.";
			} else {
				intHours = intHours - 24;
				hours = intHours + ":";
				noon = "P.M.";
			}
			if (intMinutes < 10) {
				minutes = "0"+intMinutes+":";
			} else {
				minutes = intMinutes+":";
			}
			if (intSeconds < 10) {
				seconds = "0"+intSeconds+" ";
			} else {
				seconds = intSeconds+" ";
			}
			timeString = hours+minutes+seconds;
