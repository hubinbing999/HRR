
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>siftlist</title>
    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css"
          type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">

    </script>
</head>
<body>
    <div id="div123">
        <form method="post" name="fm" action="/HR_Fist/recruit/recruitAction!toSiftList?str=sift" id="form">
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--招聘管理--面试管理--面试筛选--面试结果列表
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="10%" class="TD_STYLE1">
                        档案编号
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        姓名
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        职位分类
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        面试次数
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        面试时间
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        综合素质
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        筛选
                    </td>
                </tr>



                <tr v-for="(item,i) in row1">
                    <td class="TD_STYLE2">
                        {{item.Id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.interview_amount}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.registe_time}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.multi_quality_degree}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="['/engage_resume/interviewsift/'+item.resume_id]" target="mainFrame">筛选</a>
                    </td>
                </tr>
            </table>
        </form>
        <p>
            &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{currentPage}} 页 /每页显示 {{rl}} 条 &nbsp;&nbsp;&nbsp;共 {{pageSize}} 页 &nbsp;&nbsp;&nbsp;
            <a href="#" v-on:click="syy">上一页</a> &nbsp;&nbsp;&nbsp;
            <a href="#" v-on:click="xyy">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="currPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" v-on:click="go" width=18 height=18 border=0>
</div>
</body>
</html>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/javascript/vue.js"></script>
<script type="text/javascript">
    var currentPage = 1;
    var rl = 2;
    var pageSize = 1;
    var vm = new Vue({
        el: "#div123",
        data: {
            row1: null,
            rows: null,
            pageSize: null,
            currentPage: null,
            rl: null
        }, methods: {
            load: function () {
                var v = this;
                $.ajax({
                    url: "/engage_resume/siftlist2",
                    type: "post",
                    data: $("#form").serialize() + "&currentPage=" + currentPage + "&rl=" + rl,
                    success: function (msg) {
                        var dt = eval("(" + msg + ")");
                        v.row1 = dt.list;
                        v.rows = dt.rows;
                        v.pageSize = dt.pageSize;
                        pageSize = dt.pageSize;
                        v.rl = rl;
                        v.currentPage = currentPage;
                    }
                })
            }, syy: function () {
                if (currentPage > 1) {
                    currentPage--;
                } else {
                    currentPage = 1;
                }
                vm.load();
            }, xyy: function () {
                if (currentPage < pageSize) {
                    currentPage++;
                } else {
                    currentPage = pageSize;
                }
                vm.load();
            }, go: function () {
                var currPage123 = $("#currPage").val();
                if (currPage123 == "") {
                    currentPage = 1;
                    alert("不能为空!");
                    return;
                }
                if (currPage123 <= pageSize) {
                    currentPage = currPage123;
                }
                if (currPage123 > pageSize) {
                    alert("不能大于总页数");
                    return;
                }
                vm.load();
            }
        }, created: function () {
            this.load();
        }
    })
</script>